WindowManager:
    MainWindow:
    SettingsWindow:
    InstructionWindow:


<RoundedButton@Button>
    size_hint: (0.28, 0.10)
    font_name: "Yomogi-Regular"
    font_size: 33
    color: 0,0,0,1
    background_color: (1,0,0,0)
    background_normal: ''

<Cloud@Label>
    Image:
        source: 'images/cloud_button1.png'
        size: 190, 290
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        allow_stretch: True


<MainWindow>:
    name: "main"
    canvas.before:
        Color:
            rgba: (86/255, 164/255, 255/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 20
        spacing: 20
        Label:
            text: "Give Me\n  Wings"
            color: 1,1,1,1
            font_size: 90
            font_name: "YujiBoku-Regular"
            size_hint: (0.9, 0.9)
            pos_hint: {"center_x": 0.67, "center_y": 0.80}
        Image:
            source: 'images/wings6.gif'
            pos_hint: {"center_x": 0.28, "center_y": 0.32}
            size_hint: (0.4, 0.2)
            # size: root.size
            # allow_stretch: True
            # keep_ratio: False
            # anim_delay: -1
        Cloud:
            pos_hint: {"center_x": 0.61, "center_y": 0.44}
        RoundedButton:
            text: "Start"
            on_press: print("Start!")
            pos_hint: {"center_x": 0.61, "center_y": 0.44}
            on_press: root.start_click_sound()
            on_release: root.start_game_pressed()
        Cloud:
            pos_hint: {"center_x": 0.86, "center_y": 0.35}
        RoundedButton:
            text: "Settings"
            on_press: print("Settings")
            on_release:
                app.root.current = "settings"
                root.manager.transition.direction = "right"
            pos_hint: {"center_x": 0.86, "center_y": 0.35}
            on_press: root.click_sound()
        Cloud:
            pos_hint: {"center_x": 0.61, "center_y": 0.22}
        RoundedButton:
            text: "How To Play"
            on_press: print("Instruction")
            on_release:
                app.root.current = "instruction"
                root.manager.transition.direction = "right"
            pos_hint: {"center_x": 0.61, "center_y": 0.22}
            on_press: root.click_sound()
        Cloud:
            pos_hint: {"center_x": 0.86, "center_y": 0.11}
        RoundedButton:
            text: "Quit"
            on_press: print("Quit")
            pos_hint: {"center_x": 0.86, "center_y": 0.11}
            on_press: root.click_sound()
            on_press: root.quit_pressed()



<SettingsWindow>:
    name: "settings"
    canvas.before:
        # add the rectangle with the image.
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/cloud-example.jpg"
    Label:
        background_color: (1,0,0,0)
        background_normal: ''
        size_hint: (0.8, 0.6)
        pos_hint: {"center_x": 0.50, "center_y": 0.50}
        canvas.before:
            Color:
                rgba: (253/255, 150/255, 56/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [18]
    Button:
        size_hint: (0.16, 0.1)
        pos_hint: {"center_x": 0.23, "center_y": 0.73}
        font_size: 25
        background_color: 1,0,0,0
        text: "Back"
        color: 0,0,0,1
        on_press: print("back to main")
        on_press: root.click_sound()
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "left"
    Image:
        source: 'images/arrow.png'
        size_hint: (0.06, 0.06)
        # allow_stretch: True
        pos_hint: {"center_x": 0.16, "center_y": 0.73}
    Label:
        text: "Music volume"
        color: 0,0,0,1
        font_size: 27
        font_name: "Yomogi-Regular"
        size_hint: (0.9, 0.9)
        pos_hint: {"center_x": 0.26, "center_y": 0.56}
    Label:
        text: "Sound effect"
        color: 0,0,0,1
        font_size: 27
        font_name: "Yomogi-Regular"
        size_hint: (0.9, 0.9)
        pos_hint: {"center_x": 0.26, "center_y": 0.39}
    Slider:
        id: volume_bar
        min: 1
        max: 100
        value: 50
        orientation: 'horizontal'
        pos_hint: {'center_x': 0.7, 'center_y': 0.55}
        size_hint: (0.3,0.3)
    Slider:
        id: effect_bar
        min: 1
        max: 100
        value: 50
        orientation: 'horizontal'
        pos_hint: {'center_x': 0.7, 'center_y': 0.38}
        size_hint: (0.3,0.3)


<InstructionWindow>:
    name: "instruction"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/cloud-example.jpg"
    Label:
        background_color: (1,0,0,0)
        background_normal: ''
        size_hint: (0.9, 0.8)
        pos_hint: {"center_x": 0.50, "center_y": 0.50}
        canvas.before:
            Color:
                rgba: (253/255, 150/255, 56/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [18]
    Button:
        size_hint: (0.16, 0.1)
        pos_hint: {"center_x": 0.16, "center_y": 0.85}
        font_size: 25
        background_color: 1,0,0,0
        text: "Back"
        color: 0,0,0,1
        on_press: print("back to main")
        on_press: root.click_sound()
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "left"
    Image:
        source: 'images/arrow.png'
        size_hint: (0.06, 0.06)
        pos_hint: {"center_x": 0.09, "center_y": 0.85}
    Image:
        source: 'howtoplay.png'
        pos_hint: {"center_x": 0.50, "center_y": 0.46}
        size_hint: (0.98, 0.70)
