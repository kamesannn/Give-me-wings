#:include pipe.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "bg.png"
            Rectangle:
                size: self.width, 96
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture
    Label:
        id: score
        size_hint_y: None
        height: 96
        text: "0"
        font_size: 32
    Label:
        size_hint: None, None
        pos: 279, 0.5
        text: "Score: "
        font_size: 32
    Character:
        source: "jump1.png"
        size_hint: None, None
        size: 84, 107
        pos: 70, root.height - 250
        id: character
    Button:
        size_hint: (0.16, 0.1)
        pos_hint: {"center_x": 0.23, "center_y": 0.73}
        font_size: 25
        background_color: 1,0,0,0
        text: "Settings"
        color: 0,0,0,1
        on_press: print("Settings menu")
        # on_press: root.clickSound2()
        on_release: root.back_to_settings()
