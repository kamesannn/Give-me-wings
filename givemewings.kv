#:include pipe.kv
#:import gameoverwindow gameoverwindow

FloatLayout:
    GameOverWindow:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "bg.png"
            Rectangle:
                size: self.width, 96
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture
    Label:
        id: score
        size_hint_y: None
        height: 96
        text: "0"
        font_size: 28
        font_name: "advanced_pixel_lcd-7"
        color: 1,1,1,1
    Character:
        source: "jump1.png"
        size_hint: None, None
        size: 84, 107
        pos: 70, root.height - 250
        id: character

