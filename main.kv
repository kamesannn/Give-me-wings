
<MainLayout>:
    canvas.before:
        Color:
            rgba: (86/255, 164/255, 255/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Give Me Wings"
            text: "LAlalaa"
            font_size: 40
            font_name: "YujiBoku-Regular"

            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos