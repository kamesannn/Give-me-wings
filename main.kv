
<MainLayout>:
    canvas.before:
        Color:
            rgba: (86/255, 164/255, 255/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 50


        Button:
            text: "Start"
            size: 200, 60
            font_size: 38
            size_hint: None, None
            pos_hint: {"x":.7, "top":3}
            font_name: "Yomogi-Regular"

        Button:
            text: "Settings"
            size: 200, 60
            font_size: 38
            size_hint: None, None
            pos_hint: {"x":.7, "top":3}
            font_name: "Yomogi-Regular"


        Label:
            text: "Give Me Wings"
            font_size: 50
            font_name: "YujiBoku-Regular"
            size_hint: None, None
            pos_hint: {"x":.5, "top":6}

