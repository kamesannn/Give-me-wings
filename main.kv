
<MainLayout>:
    canvas.before:
        Color:
            rgba: (86/255, 164/255, 255/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 50

        Button:
            text: "Start"
            size: 100, 100
            size_hint: None, None


        Label:
            text: "Give Me Wings"
            font_size: 40
            font_name: "YujiBoku-Regular"
            size_hint: 0.5, 0.4
            pos_hint: {"x":.4, "top":1}

            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
